<Page x:Class="Kursach_Alpinizm.Pages.Page_Mail"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursach_Alpinizm.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_Mail">
    <Page.Background>
        <ImageBrush ImageSource="../image/вход.jpg"/>
    </Page.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Введите почту" Grid.Row="0"></TextBlock>
        <TextBox x:Name="Mail" Grid.Row="1" Height="30"  Width="500"></TextBox>
        <Button Content="Восстановить пароль" Grid.Row="3" Grid.Column="1" Width="500" Name="BtnMail" Click="BtnMail_Click"/>
    </Grid>
</Page>
