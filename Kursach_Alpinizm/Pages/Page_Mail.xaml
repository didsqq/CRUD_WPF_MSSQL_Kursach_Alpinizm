<Page x:Class="Kursach_Alpinizm.Pages.Page_Mail"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursach_Alpinizm.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_Mail">
    <Page.Background>
        <ImageBrush ImageSource="../image/starry-sky-mountain-background-nature-remixed-media.jpg" />
    </Page.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="1" Text="Enter your verified account email address &#x0a; and we will send you a new password." Margin="0,70,0,50"></TextBlock>
        <Button Content="Back" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,40,50,0" Grid.Column="1" Name="BtnBack" Click="BtnBack_Click"/>
        <StackPanel>
            <TextBlock Text="Reset your password" Margin="0,70,0,50"></TextBlock>
            <TextBox x:Name="Mail" Height="30" Margin="0,130,0,50"  Width="280"></TextBox>
            <Button Content="Reset" Margin="0,0,0,50" Width="280" Name="BtnMail" Click="BtnMail_Click"/>
        </StackPanel>

    </Grid>
</Page>
