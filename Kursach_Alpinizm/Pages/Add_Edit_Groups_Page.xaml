<Page x:Class="Kursach_Alpinizm.Pages.Add_Edit_Groups_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursach_Alpinizm.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add_Edit_Groups_Page">
    <Page.Background>
        <ImageBrush ImageSource="../image/photo_2024-04-30_22-12-55.jpg"/>
    </Page.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="617*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <TextBlock Text="Количество участников" TextWrapping="Wrap"></TextBlock>
        
        <TextBox Text="{Binding Number_of_participants}" Grid.Column="1" Height="30"></TextBox>

        <Button Content="Сохранить" Grid.ColumnSpan="2" Grid.Row="1" Name="BtnSave" Click="BtnSave_Click"/>
    </Grid>
</Page>
